<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!-- place configuration details here -->

<bean class="com.cg1.collections.Employee" name="employee" init-method="init" destroy-method="destroy">
<property name="phones">
<list>
<value>23135246</value>
<value>243425641</value>
</list>
</property>

<property name="address">
<set>
<value>Banglore</value>
<value>Mumbai</value>
</set>
</property>

<property name="courses">
<map>
<entry key="Java" value="5 days"></entry>
</map>
</property>

</bean>

</beans>