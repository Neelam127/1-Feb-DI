<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!-- place configuration details here -->

<bean class="com.cg1.autowiring.Address" id="address">
<property name="street" value="Temp Street"></property>
<property name="city" value="Temp City"></property>
</bean>

<bean class="com.cg1.autowiring.Employee" id="employee" autowire="byName">

</bean>
</beans>